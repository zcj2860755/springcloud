  </resultMap>


  <!-- 条件查询 list -->
  <select id="selectPlaceList" resultMap="BaseResultMap">
    SELECT a.*,b.name unitName,c.name areaName
    from  t_manager_place a  inner join t_manager_unit b  on a.unit_id = b.id left join t_manager_area c on a.area_id=c.id
    <where>
      <if test=" mark == 0 and keyWords !=null and keyWords !=''">
        (a.name like concat('%',#{keyWords},'%') or a.code like concat('%',#{keyWords},'%'))
      </if>
      <if test="mark == 1">
        a.code like concat('%',#{keyWords},'%')
      </if>
      <if test="mark == 2 ">
        a.name like concat('%',#{keyWords},'%')
      </if>
      <if test="type != null">
        and a.type = #{type}
      </if>
      <if test="unitId != null ">
        and a.unit_id = #{unitId}
      </if>
    </where>
    order by a.create_time desc
  </select>


  <select id="selectPalceById" resultMap="BaseResultMap">
    SELECT a.*,b.name unitName
    from  t_manager_place a  inner join t_manager_unit b  on a.unit_id = b.id
    where a.id = #{id}
  </select>




</mapper>