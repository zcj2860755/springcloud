  </resultMap>


  <!-- 条件查询 list -->
  <select id="selectUnitList" resultMap="BaseResultMap">
    SELECT a.*,c.name areaName
    from  t_manager_unit a inner join  t_manager_area c on a.area_id=c.id
    <where>
      <if test=" mark == 0 and keyWords !=null and keyWords !=''">
        (a.name like concat('%',#{keyWords},'%') or a.code like concat('%',#{keyWords},'%'))
      </if>
      <if test="mark == 1">
        a.code like concat('%',#{keyWords},'%')
      </if>
      <if test="mark == 2 ">
        a.name like concat('%',#{keyWords},'%')
      </if>
    </where>
    order by a.create_time desc
  </select>


  <select id="selectUnitById" resultMap="BaseResultMap">
    SELECT a.*,b.name areaName
    from  t_manager_unit a  inner join t_manager_area b  on a.area_id = b.id
    where a.id = #{id}
  </select>


</mapper>