    <result column="admin_area_id" jdbcType="VARCHAR" property="adminAreaId" />
    <result column="freeze_status" jdbcType="INTEGER" property="freezeStatus" />
  </resultMap>


  <!-- 条件查询 list -->
  <select id="selectPlaceInfoList" resultMap="BaseResultMap">
    SELECT *
    from  place_info
    <where>
      <if test="keyWords != null">
        (name like concat('%',#{keyWords},'%') or code like concat('%',#{keyWords},'%'))
      </if>
      <if test="type != null">
        and type = #{type}
      </if>
      <if test="unitId != null ">
        and unit_id = #{unitId}
      </if>
    </where>
    order by create_time desc
  </select>

  <!--解冻/冻结-->
  <update id="updateFreezeStatus" >
   update place_info
    <set >
      <if test="freezeStatus != null">
        freeze_status = #{freezeStatus},
      </if>
    </set>
    where id = #{id}
  </update>

</mapper>