    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="type" jdbcType="INTEGER" property="type" />
    <result column="manager" jdbcType="VARCHAR" property="manager" />
    <result column="manager_telephone" jdbcType="VARCHAR" property="managerTelephone" />
    <result column="unit_id" jdbcType="VARCHAR" property="unitId" />
    <result column="area_size" jdbcType="VARCHAR" property="areaSize" />
    <result column="fire_telephone" jdbcType="VARCHAR" property="fireTelephone" />
    <result column="is_main" jdbcType="VARCHAR" property="isMain" />
    <result column="lon" jdbcType="DOUBLE" property="lon" />
    <result column="lat" jdbcType="DOUBLE" property="lat" />
